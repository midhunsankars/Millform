<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="mrp_workcenter_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.workcenter.form.view.inherit</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='costing']" position='inside'>
                <field name="gauge_time"/>
                <field name="width_time"/>
                <field name="run_speed"/>
                <field name="short_run_speed"/>
                <field name="short_length"/>
                <field name="pack_time"/>
            </xpath>
        </field>
    </record>
</odoo>
